@model IEnumerable<BookStoreMVC.UI.Areas.Admin.Models.BookVMs.AdminBookListVM>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
    var row = 0;
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfPublish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublisherName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            row++;
            <tr>
            <td>
                @row
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfPublish)
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.IsAvailable, new{@class= "availability-Checkbox", data_id=item.Id})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherName)
            </td>
            <td>
                    <a class="btn btn-primary rounded-pill" asp-area="Admin" asp-controller="Book" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-warning rounded-pill" asp-area="Admin" asp-controller="Book" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-danger rounded-pill" asp-area="Admin" asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
